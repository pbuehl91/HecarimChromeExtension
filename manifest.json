{
  "name": "Hecarim Chrome Extension",
  "version": "0.1",
  "description": "A Hecarim browsing experience",

  "permissions": [
    "http://*.google.com/",
    "bookmarks",
    "chrome://favicon/",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "geolocation",
    "history",
    "idle",
    "management",
    "notifications",
    "tabs",
    "tts",
    "ttsEngine",
    "unlimitedStorage"
  ],

  "content_security_policy": "script-src https://api.twitter.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["hecarim.css"],
      "js": ["jquery/jquery.min.js", "hecarim.js"]
    }
  ],

  "manifest_version": 2


}